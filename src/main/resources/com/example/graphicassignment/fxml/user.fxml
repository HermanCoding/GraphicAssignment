<?import javafx.scene.text.Font?>

<GridPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.graphicassignment.UserController">
    <columnConstraints>
        <ColumnConstraints minWidth="100.0" />
        <ColumnConstraints />
        <ColumnConstraints minWidth="50.0" />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextField fx:id="textField_name" stylesheets="@../style.css" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        <TextField fx:id="textField_lastname" stylesheets="@../style.css" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <TextField stylesheets="@../style.css" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <GridPane.margin>
                <Insets />
            </GridPane.margin>
        </TextField>
      <Label text="Your name?" GridPane.columnIndex="1">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="10.0" layoutY="8.0" text="Your lastname?" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Label layoutX="60.0" layoutY="8.0" text="Your favurit song?" GridPane.columnIndex="1" GridPane.rowIndex="4">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
        <ImageView preserveRatio="true" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.valignment="CENTER" GridPane.vgrow="NEVER">
            <image>
                <Image url="@../images/trollyou-troll-dance.gif" />
            </image>
            <GridPane.margin>
                <Insets bottom="50.0" left="10.0" right="50.0" top="50.0" />
            </GridPane.margin>
        </ImageView>
        <Button fx:id="btn_push" alignment="CENTER" mnemonicParsing="false" onAction="#switchToScene2" text="DON'T PUSH THIS BUTTON" GridPane.columnIndex="3" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER">
            <GridPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </GridPane.margin>
        </Button>
    </children>
</GridPane>
